<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/RecyclerviewFondoNoticias"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
         app:cardElevation="0.5dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/CeldaNoticiaFuente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fuente"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/CeldaNoticiaAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Autor"
                app:layout_constraintTop_toBottomOf="@+id/CeldaNoticiaFuente" />

            <TextView
                android:id="@+id/CeldaNoticiaTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titulo"
                app:layout_constraintTop_toBottomOf="@+id/CeldaNoticiaAutor" />

            <TextView
                android:id="@+id/CeldaNoticiaDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripcion"
                app:layout_constraintTop_toBottomOf="@+id/CeldaNoticiaTitulo" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>