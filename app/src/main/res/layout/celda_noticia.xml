<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/RecyclerviewFondoNoticias"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
         app:cardElevation="0.5dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/CeldaNoticiaImagen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/CeldaNoticiaFuente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Fuente"
                app:layout_constraintLeft_toRightOf="@+id/CeldaNoticiaImagen"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/CeldaNoticiaTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Titulo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/CeldaNoticiaImagen"
                app:layout_constraintTop_toBottomOf="@+id/CeldaNoticiaFuente" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>